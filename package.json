{
  "name": "meteor_css_modules",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.5",
    "meteor-node-stubs": "^0.4.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "node-sass": "^4.11.0"
  },
  "cssModules": {
    "extensions": [
      "css",
      "scss"
    ],
    "enableSassCompilation": [
      "scss"
    ],
    "ignorePaths": [
      "node_modules"
    ],
    "passthroughPaths": [
      "styles/"
    ],
    "cache": {
      "enableCache": true
    }
  }
}
